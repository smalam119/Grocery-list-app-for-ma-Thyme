<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.test.smalam.grocerylist">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".com.test.smalam.grocerylist.main.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".com.test.smalam.grocerylist.main.ToDoViewerActivity"
            android:label="@string/title_activity_item_selected_list"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity
            android:name=".com.test.smalam.grocerylist.main.EditToDoActivity"
            android:label="@string/title_activity_edit_list"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity
            android:name=".com.test.smalam.grocerylist.main.EditNotesActivity"
            android:label="@string/title_activity_edit_notes"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity
            android:name=".com.test.smalam.grocerylist.main.NotesViewerActivity"
            android:label="@string/title_activity_notes_viewer"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity
            android:name=".com.test.smalam.grocerylist.main.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan|adjustResize" />

        <service
            android:name=".com.test.smalam.grocerylist.service.ReminderService"
            android:exported="false" />
        <!--
             ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".com.test.smalam.grocerylist.about.AboutActivity"
            android:label="@string/title_activity_about"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".com.test.smalam.grocerylist.main.CreateNewToDoFragment"
            android:label="@string/title_activity_create_new_to_do_fragment"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".com.test.smalam.grocerylist.about.ScrollingActivity"
            android:label="@string/title_activity_scrolling"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>
