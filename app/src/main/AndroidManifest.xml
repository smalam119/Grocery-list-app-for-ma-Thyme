<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.test.smalam.grocerylist">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ToDoViewerActivity"
            android:label="@string/title_activity_item_selected_list"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".EditToDoActivity"
            android:label="@string/title_activity_edit_list"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".EditNotesActivity"
            android:label="@string/title_activity_edit_notes"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".NotesViewerActivity"
            android:label="@string/title_activity_notes_viewer"
            android:theme="@style/AppTheme" />
    </application>

</manifest>
